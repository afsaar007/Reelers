{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist", "installCommand": "npm install", "buildCommand": "npm run build" }
    },
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/server.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}
